        {{ form_errors(form.category) }}
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        {{ form_label(form.picture, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.picture, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
