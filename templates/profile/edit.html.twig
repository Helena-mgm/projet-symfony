{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container py-4">
  <h1>Mon profil</h1>

  <div class="row g-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          {% if user.profilePicture %}
            <img src="{{ user.profilePicture }}" alt="avatar" class="rounded-circle mb-3" width="120" height="120">
          {% else %}
            <div class="bg-secondary rounded-circle mb-3" style="width:120px;height:120px;"></div>
          {% endif %}

          <h5>{{ user.firstName }} {{ user.lastName }}</h5>
          <p class="text-muted">{{ user.email }}</p>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          {{ form_start(profileForm) }}

          <div class="mb-3">
            {{ form_label(profileForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(profileForm.email) }}
          </div>

          <div class="mb-3 row">
            <div class="col">
              {{ form_label(profileForm.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(profileForm.firstName, {'attr': {'class': 'form-control'}}) }}
              {{ form_errors(profileForm.firstName) }}
            </div>
            <div class="col">
              {{ form_label(profileForm.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(profileForm.lastName, {'attr': {'class': 'form-control'}}) }}
              {{ form_errors(profileForm.lastName) }}
            </div>
          </div>

          <div class="mb-3">
            {{ form_label(profileForm.profilePicture, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.profilePicture, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(profileForm.profilePicture) }}
          </div>

          <div class="mb-3">
            {{ form_label(profileForm.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(profileForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            <div class="form-text">Laisser vide pour conserver le mot de passe actuel.</div>
            {{ form_errors(profileForm.plainPassword) }}
          </div>

          <button class="btn btn-primary">Enregistrer</button>

          {{ form_end(profileForm) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
