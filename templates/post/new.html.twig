{% extends 'base.html.twig' %}

{% block title %}Nouvel article{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0">
                    <h2 class="h5 mb-0 fw-semibold">Créer un article</h2>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.content, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 6
                            }
                        }) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.category) }}
                            </div>
                        </div>

                        <div class="col-md-6">
    <div class="mb-3">
        {{ form_label(form.picture, null, {'label_attr': {'class': 'form-label'}}) }}

                <div class="input-group">
                    {{ form_widget(form.picture, {
                        'attr': {
                            'class': 'form-control',
                            'accept': 'image/*'
                        }
                    }) }}
                </div>

                {{ form_errors(form.picture) }}

                <div class="form-text">
                    Formats autorisés : jpg, png, gif — Taille max : 2MB
                </div>
            </div>
        </div>

                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary px-4">
                            Publier
                        </button>
                        <a href="{{ path('app_post_index') }}" class="btn btn-outline-secondary">
                            Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>


<script>
document.querySelector('input[type="file"]').addEventListener('change', function (e) {
    const preview = document.getElementById('preview-image');
    const file = e.target.files[0];

    if (file) {
        preview.src = URL.createObjectURL(file);
        preview.classList.remove('d-none');
    }
});
</script>

{% endblock %}

