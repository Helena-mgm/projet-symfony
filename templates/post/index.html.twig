{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Articles</h1>

    {% if is_granted('ROLE_ADMIN') %}
      <a class="btn btn-primary" href="{{ path('app_post_new') }}">+ Nouvel article</a>
    {% endif %}
  </div>

  <div class="row g-3">
    {% for post in posts %}
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          {% if post.picture %}
            <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}">
          {% endif %}

          <div class="card-body">
            <h5 class="card-title">{{ post.title }}</h5>
            <p class="card-text text-muted small mb-3">
              {% if post.publishedAt %}Publi√© le {{ post.publishedAt|date('d/m/Y') }}{% endif %}
            </p>

            <a class="btn btn-outline-primary" href="{{ path('app_post_show', {id: post.id}) }}">
              Lire
            </a>
          </div>
        </div>
      </div>
    {% else %}
      <p class="text-muted">Aucun article pour le moment.</p>
    {% endfor %}
  </div>
</div>
{% endblock %}
