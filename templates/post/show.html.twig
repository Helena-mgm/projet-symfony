{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
  <a href="{{ path('app_post_index') }}" class="btn btn-link px-0">&larr; Retour</a>

  <div class="card shadow-sm">
    {% if post.picture %}
      <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}">
    {% endif %}

    <div class="card-body">
      <h1 class="h3">{{ post.title }}</h1>

      <p class="text-muted mb-4">
        {% if post.publishedAt %}Publi√© le {{ post.publishedAt|date('d/m/Y H:i') }}{% endif %}
      </p>

      <div class="mt-3">
        {{ post.content|nl2br }}
      </div>

      {% if is_granted('ROLE_ADMIN') %}
        <hr>
        <div class="d-flex gap-2">
           <a class="btn btn-warning" href="{{ path('app_post_show', {id: post.id}) }}"
 
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
