{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="container my-5">

  <a href="{{ path('app_post_index') }}" class="btn btn-link mb-3 px-0">
    &larr; Retour
  </a>

  <div class="card shadow-sm mb-5">
    {% if post.picture %}
      <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}">
    {% endif %}

    <div class="card-body">
      <h1 class="card-title h3 mb-2">{{ post.title }}</h1>

      <p class="text-muted mb-4">
        {% if post.publishedAt %}
          Publié le {{ post.publishedAt|date('d/m/Y H:i') }}
        {% else %}
          —
        {% endif %}
      </p>

      <div class="fs-6">
        {{ post.content|nl2br }}
      </div>
    </div>
  </div>

  <div class="mb-5">
    <h3 class="h5 mb-3">Commentaires</h3>

    {% set approvedComments = post.comments|filter(c => c.status == 'approved') %}

    {% if approvedComments is empty %}
      <p class="text-muted">Aucun commentaire pour le moment.</p>
    {% else %}
      {% for comment in approvedComments %}
        <div class="card mb-3">
          <div class="card-body py-3">
            <div class="small text-muted mb-2">
              {{ comment.users.email }} • {{ comment.createdAt|date('d/m/Y H:i') }}
            </div>
            <div>
              {{ comment.content|nl2br }}
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  {% if app.user %}
    <div class="card shadow-sm mb-5">
      <div class="card-body">
        <h4 class="h6 mb-3">Ajouter un commentaire</h4>

        {{ form_start(commentForm) }}
          <div class="mb-3">
            {{ form_label(commentForm.content, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(commentForm.content, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {{ form_errors(commentForm.content) }}
          </div>

          <button class="btn btn-primary">
            Envoyer
          </button>
        {{ form_end(commentForm) }}
      </div>
    </div>
  {% else %}
    <p class="text-muted">
      <a href="{{ path('app_login') }}">Connecte-toi</a> pour commenter.
    </p>
  {% endif %}

  {% if is_granted('ROLE_ADMIN') %}
    <div class="d-flex gap-2">
      <a class="btn btn-warning" href="{{ path('app_post_index') }}">
        Retour liste
      </a>
    </div>
  {% endif %}

</div>
{% endblock %}
